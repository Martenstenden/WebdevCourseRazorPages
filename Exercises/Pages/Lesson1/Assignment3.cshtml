@page
@model Exercises.Pages.Lesson1.Assignment3

@{
    Layout = null;
}

<div>
    <p id="result">@Model.Result</p>
</div>

<form method="post" id="calculatorForm">
    <input type="hidden" name="previousresult" value=@Model.Result>
    <input type="text" id="input" name="input">
    <button name="addBtn" id="addBtn" type="submit" asp-page-handler="Add">+</button>
    <button name="subBtn" id="subBtn" type="submit" asp-page-handler="Sub">-</button>
    <button name="mulBtn" id="mulBtn" type="submit" asp-page-handler="Mul">*</button>
    <button name="divBtn" id="divBtn" type="submit" asp-page-handler="Div">/</button>
</form>


