@page "{action?}/{count:int?}"
@model Exercises.Pages.Lesson1.Assignment1

@{
    Layout = null;
}

<div>
    <p>
        <span id="scoreHome">@Model.scoreHome</span> - <span id="scoreAway">@Model.scoreAway</span>
    </p>
    <div>
        <form asp-route-action="incrementHome" asp-route-count="@Model.scoreHome" method="get">
            <button type="submit">Home++</button>
        </form>
        <form asp-route-action="decrementHome" asp-route-count="@Model.scoreHome" method="get">
            <button type="submit">Home--</button>
        </form>
        <form asp-route-action="incrementAway" asp-route-count="@Model.scoreAway" method="get">
            <button type="submit">Away++</button>
        </form>
        <form asp-route-action="decrementAway" asp-route-count="@Model.scoreAway" method="get">
            <button type="submit">Away--</button>
        </form>
    </div>
